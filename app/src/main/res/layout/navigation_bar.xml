<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <ImageButton
        android:id="@+id/imgBtnLeft"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="match_parent"
        android:background="@drawable/action_bar_bg"
        android:src="@null"
        android:visibility="gone"
        app:layout_widthPercent="100%h" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/sixteen_sp" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgBtnRight"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:background="@drawable/action_bar_bg"
            android:src="@drawable/search_btn"
            android:visibility="gone"
            app:layout_widthPercent="100%h" />

        <Button
            android:id="@+id/btnRight"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:background="@drawable/action_bar_bg"
            android:src="@null"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteen_sp"
            android:visibility="gone"
            app:layout_widthPercent="100%h" />

        <RelativeLayout
            android:id="@+id/rlMsg"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:background="@drawable/action_bar_bg"
            android:visibility="gone"
            app:layout_widthPercent="100%h">

            <ImageButton
                android:id="@+id/imgBtnMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/action_bar_bg"
                android:focusable="false"
                android:src="@drawable/message" />

            <TextView
                android:id="@+id/txtSubmitPhoneNum"
                android:layout_width="@dimen/fifteen_dp"
                android:layout_height="@dimen/fifteen_dp"
                android:layout_alignRight="@+id/imgBtnMsg"
                android:layout_alignTop="@+id/imgBtnMsg"
                android:layout_marginRight="-7.5dp"
                android:layout_marginTop="-7.5dp"
                android:background="@drawable/design_point_red"
                android:focusable="false"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/eight_sp" />
        </RelativeLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>